@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Add custom CSS styles to enhance the appearance */
    body {
        margin: 0;
        padding: 0;
        background-image: url('https://positiwise.com/blog/wp-content/uploads/2022/03/software-development-models-sdlc.jpg');
        background-size: cover; /* Changed to 'cover' for cropping */
        background-repeat: no-repeat;
        background-attachment: fixed; /* Keeps the background image fixed while scrolling */
        background-position: top right; /* Position the background image to top right */
        color: black; /* Optionally, set text color to white for better visibility */
    }

    .container {
        padding-top: 50px;
    }

    .lead {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container text-center">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="display-4">Welcome to Software Development</h1>
            <p class="lead">Explore the exciting world of software development and learn how to build amazing applications.</p>
            <p>Whether you're a seasoned developer or just getting started, we have resources to help you grow and succeed in your software development journey.</p>
            <p>Discover the latest technologies, best practices, and real-world examples to create powerful and innovative software.</p>
            <a href="https://docs.microsoft.com/aspnet/core" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </div>
</div>
